<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/albumlistviewitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/storybookListItemImageViewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" >

            <org.zeroxlab.widget.RoundedImageView
                android:id="@+id/userimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_image" />
            <!--
             <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             
             android:layout_centerVertical="true"
             android:id="@+id/userimage"
            
             android:layout_marginLeft="1dp"
             android:layout_marginTop="1dp"
           
            
            />
            -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/storybookTextItemlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/storybookListItemImageViewLayout" >

            <!--
       <RelativeLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/storyBookListItemNameLayout"
       android:layout_centerHorizontal="true"
      
            >
            -->

            <TextView
                android:id="@+id/userName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="item name"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lastmessage"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginTop="15dp"
                android:text="lastmessage"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- </RelativeLayout> -->

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>